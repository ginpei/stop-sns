{
  "manifest_version": 2,
  "name": "Stop SNS",
  "version": "1.0",
  "description": "Help you to spend time on SNS.",
  "icons": {
    "48": "icon-512.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background/timer.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://www.facebook.com/*"
      ],
      "js": [
        "content_scripts/index.js"
      ],
      "css": [
        "content_scripts/main.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon-512.png",
    "default_title": "Stop SNS",
    "default_popup": "popup/popup.html"
  }
}